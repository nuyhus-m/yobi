<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base WidgetStyle -->
    <style name="Widget.TextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Button" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_purple_radius_40</item>
    </style>

    <style name="Widget.EditText" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <!-- TextStyle -->
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardTitleTextStyle">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardTitleBoldTextStyle">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CaptionTextStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- CustomStyle -->
    <style name="Widget.Button.Secondary">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_purple_radius_12</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FabShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Widget.App.NumberPicker" parent="">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="colorControlNormal">@color/purple</item>
    </style>
</resources>