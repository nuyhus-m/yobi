<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_label"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="체지방률" />

    <TextView
        android:id="@+id/tv_grade"
        style="@style/LabelTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_8dp"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_label"
        tools:background="@drawable/bg_red_sub_radius_4"
        tools:backgroundTint="@color/red_sub"
        tools:text="높음"
        tools:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/SubTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label"
        tools:text="23.5" />

    <TextView
        android:id="@+id/tv_unit"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_70dp"
        android:textColor="@color/gray_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_value"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="%" />

</androidx.constraintlayout.widget.ConstraintLayout>