<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="@color/purple">

    <TextView
        android:id="@+id/tv_in_my_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 손 안의"
        style="@style/TitleTextStyle"
        android:textSize="56sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/space_70dp"
        android:layout_marginStart="@dimen/space_40dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_yo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요"
        style="@style/TitleTextStyle"
        android:textSize="56sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_in_my_hand"
        app:layout_constraintStart_toStartOf="@+id/tv_in_my_hand"
        android:textColor="@color/peach"/>
    <TextView
        android:id="@+id/tv_yang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="양"
        style="@style/TitleTextStyle"
        android:textSize="56sp"
        app:layout_constraintTop_toTopOf="@+id/tv_yo"
        app:layout_constraintStart_toEndOf="@+id/tv_yo"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_bi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비"
        style="@style/TitleTextStyle"
        android:textSize="56sp"
        app:layout_constraintTop_toTopOf="@+id/tv_yo"
        app:layout_constraintStart_toEndOf="@+id/tv_yang"
        android:textColor="@color/peach"
        android:layout_marginStart="@dimen/space_16dp"/>
    <TextView
        android:id="@+id/tv_seo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서"
        style="@style/TitleTextStyle"
        android:textSize="56sp"
        app:layout_constraintTop_toTopOf="@+id/tv_yo"
        app:layout_constraintStart_toEndOf="@+id/tv_bi"
        android:textColor="@color/white"/>

    <!-- 캐릭터 영역 (이미지 자리만 잡음) -->
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/anim_splash_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/space_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>