 //                    docker-compose -p yobi-ai -f $COMPOSE_FILE_2 --env-file $ENV_FILE \\
 //                        up -d --build --no-cache --force-recreate ai
 //                        up -d --build --no-cache --force-recreate a
 //                """
 //            }
 //        }
    }
}

