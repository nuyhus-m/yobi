//                """
//            }
//        }



 //       stage('Deploy to EC2-2') {
 //           steps {
 //               sh """
 //                   # 기존 컨테이너 중지 및 삭제
 //                   docker stop ai-app || true
 //                  docker rm ai-app || true
 //
 //                    # 기존 네트워크와 orphan 컨테이너 정리
 //                    docker-compose -p yobi-ai -f $COMPOSE_FILE_2 --env-file $ENV_FILE down --remove-orphans
 //
